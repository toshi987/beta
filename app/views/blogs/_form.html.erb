<%= form_with(model: @blog, local: true, url: choose_new_or_edit) do |form| %>
  <% if @blog.errors.any? %>
    <div id="error_explanation">
      <h2><%= @blog.errors.count %> errors are existedã€‚</h2>
      <ul>

      <% @blog.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="blog_title">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>
  <div class="blog_title">
    <%= form.label :content %>
    <%= form.text_field :content %>
  </div>
  <%= form.hidden_field :group_id, :value => @blog.group_id %>
  <%= form.hidden_field :user_id, :value => current_user.id %>
  <%= form.submit %>
<% end %>

<%= link_to "Back to Posted List", blogs_path(id: @group.id) %>